<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_e8"
    android:orientation="vertical">

    <include layout="@layout/toolbar_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                style="@style/text_style"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/username"
                app:layout_constraintBottom_toTopOf="@+id/textView1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView1"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded" />


            <TextView
                android:id="@+id/staff_name"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView" />


            <TextView
                android:id="@+id/textView1"
                style="@style/text_style"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/Job_number"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_Job_number"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView1"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView1" />


            <TextView
                android:id="@+id/textView2"
                style="@style/text_style"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/sex"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView1"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_sex"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView2" />


            <TextView
                android:id="@+id/textView3"
                style="@style/text_style"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/Contact_number"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_Contact_number"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView3" />


            <TextView
                android:id="@+id/textView4"
                style="@style/text_style"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/ID_number"
                app:layout_constraintBottom_toTopOf="@+id/textView5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_idcart"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView4" />


            <TextView
                android:id="@+id/textView5"
                style="@style/text_style"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/email_address"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_email"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView5"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView6"
                style="@style/text_style"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/Remarks"
                app:layout_constraintBottom_toTopOf="@+id/textView7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_mark"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView6"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView6" />


            <TextView
                android:id="@+id/textView7"
                style="@style/text_style"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/Main_person_in_charge_certificate_number"
                app:layout_constraintBottom_toTopOf="@+id/textView8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_maincharge"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView7" />


            <TextView
                android:id="@+id/textView8"
                style="@style/text_style"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/Main_person_in_charge_of_the_certificate_issuing_authority"
                app:layout_constraintBottom_toTopOf="@+id/textView9"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_maincharge_author"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView8" />


            <TextView
                android:id="@+id/textView9"
                style="@style/text_style"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/Main_person_in_charge_certificate_issuing_date"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_maincharge_stime"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView10"
                style="@style/text_style"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/Safety_officer_certificate_No."
                app:layout_constraintBottom_toTopOf="@+id/textView11"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_sdirector"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView10"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView11"
                style="@style/text_style"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/Safety_officer_issuing_authority"
                app:layout_constraintBottom_toTopOf="@+id/textView12"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_sdirector_author"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView11"
                app:layout_constraintLeft_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView12"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_marginTop="0.8dp"
                android:gravity="right"
                android:padding="15dp"
                android:text="@string/Safety_officer_certificate_issuing_date"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/staff_sdirector_stime"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/staff_sdirector_stime"
                style="@style/text_other_style"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/textView12"
                app:layout_constraintLeft_toRightOf="@+id/textView12"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView12" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="0.8dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/staff_idCart_z"
                        style="@style/Sketch_map_layout2">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/staff_idCart_z_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Positive_identity_card"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/staff_principal"
                        style="@style/Sketch_map_layout2">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/staff_principal_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Principal_responsible_person_certificate"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/staff_Safety_Officer"
                        style="@style/Sketch_map_layout2">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/staff_Safety_Officer_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Safety_officer_certificate"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/cp_p4_thumb"
                        style="@style/Sketch_map_layout2"
                        android:visibility="invisible">

                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/cp_p4_thumb_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>


    </ScrollView>


</LinearLayout>
