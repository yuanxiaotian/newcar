<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.xuliucar.xuli.xuliucar.com.xuliucar.me.ui.fragment.StaffDetail">

    <android.support.v7.widget.Toolbar
        android:id="@+id/carOwnerDtail_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Owner_details"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/carOwnerDetail_RefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/content_bg">

                <LinearLayout style="@style/a_line_style">

                    <TextView
                        style="@style/a_line_style_text"
                        android:gravity="center"
                        android:text="@string/name" />

                    <TextView
                        android:id="@+id/carOwner_ownername"
                        style="@style/a_line_style_text2" />
                </LinearLayout>

                <View style="@style/line" />

                <LinearLayout style="@style/a_line_style">

                    <TextView
                        style="@style/a_line_style_text"
                        android:gravity="center"
                        android:text="@string/sex" />

                    <TextView
                        android:id="@+id/carOwner_sex"
                        style="@style/a_line_style_text2" />
                </LinearLayout>

                <View style="@style/line" />

                <LinearLayout style="@style/a_line_style">

                    <TextView
                        style="@style/a_line_style_text"
                        android:gravity="center"
                        android:text="@string/carOwner_phone_one" />

                    <TextView
                        android:id="@+id/carOwner_phone"
                        style="@style/a_line_style_text2" />
                </LinearLayout>

                <View style="@style/line" />

                <LinearLayout style="@style/a_line_style">

                    <TextView
                        style="@style/a_line_style_text"
                        android:gravity="center"
                        android:text="@string/carOwner_phone_two" />

                    <TextView
                        android:id="@+id/carOwner_phone2"
                        style="@style/a_line_style_text2" />
                </LinearLayout>

                <View style="@style/line" />

                <LinearLayout style="@style/a_line_style">

                    <TextView
                        style="@style/a_line_style_text"
                        android:gravity="center"
                        android:text="@string/Owner_ID_number" />

                    <TextView
                        android:id="@+id/carOwner_ownerid"
                        style="@style/a_line_style_text2" />
                </LinearLayout>

                <View style="@style/line" />

                <LinearLayout style="@style/a_line_style">

                    <TextView
                        style="@style/a_line_style_text"
                        android:gravity="center"
                        android:text="@string/Owner_ID_card_address" />

                    <TextView
                        android:id="@+id/carOwner_idaddr"
                        style="@style/a_line_style_text2" />
                </LinearLayout>

                <View style="@style/line" />

                <LinearLayout style="@style/a_line_style">

                    <TextView
                        style="@style/a_line_style_text"
                        android:gravity="center"
                        android:text="@string/Owner_now_living_address" />

                    <TextView
                        android:id="@+id/carOwner_nowaddr"
                        style="@style/a_line_style_text2" />
                </LinearLayout>

                <View style="@style/line" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carOwner_p1"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/carOwner_p1_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Positive_identity_card"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carOwner_p2"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/carOwner_p2_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/opposite_idCard"
                            android:textColor="@android:color/white" />


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/carOwner_p3"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/carOwner_p3_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Temp_residence_permit"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/carOwner_p4"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/carOwner_p4_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo"
                            android:contentDescription="@string/image"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Temp_residence_permit_opposite"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
