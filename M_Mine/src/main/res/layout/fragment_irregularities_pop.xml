<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_e8">


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_a"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/c_w"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/small_car"
        android:textColor="@color/c_2c"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.8dp"
        android:background="@color/c_w"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/big_car"
        android:textColor="@color/c_2c"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_a" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.8dp"
        android:background="@color/c_w"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/tow_car"
        android:textColor="@color/c_2c"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_b" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_d"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.8dp"
        android:background="@color/c_w"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/big_bus"
        android:textColor="@color/c_2c"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_c" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_e"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.8dp"
        android:background="@color/c_w"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/in_bus"
        android:textColor="@color/c_2c"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_d" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_f"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.8dp"
        android:background="@color/c_w"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/hang_car"
        android:textColor="@color/c_2c"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_e" />


</android.support.constraint.ConstraintLayout>
