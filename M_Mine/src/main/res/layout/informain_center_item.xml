<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_center_item_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/dot"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:src="@drawable/shape_oval_reg"
        app:layout_constraintBottom_toBottomOf="@+id/info_center_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/info_center_content" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/info_center_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/c_2c"
        android:textSize="@dimen/text_size"
        app:layout_constraintLeft_toRightOf="@+id/dot"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/info_center_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_center_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/info_center_content"
        android:textColor="@color/c_58"
        android:textSize="@dimen/text_other_size"
        app:layout_constraintLeft_toLeftOf="@+id/info_center_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_center_content" />

</android.support.constraint.ConstraintLayout>
