<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/driverDetail_toobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/Driver_details"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/driverDetail_RefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/driver_detail_header" />

                <View style="@style/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/driver_idCart_z"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/driver_idCart_z_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Positive_identity_card"
                            android:textColor="@android:color/white" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/driver_idCart_f"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/driver_idCart_f_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/image"
                            android:scaleType="centerInside"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/opposite_idCard"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/driver_Driver_license"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/driver_Driver_license_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Driver_license"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/driver_c_Driver_license"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/driver_c_Driver_license_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Copy_of_driver_license"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/driver_Qualification_certificate"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/driver_Qualification_certificate_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Positive_employment_qualification_certificate"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/driver_Qualification_certificate_b"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/driver_Qualification_certificate_b_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Positive_employment_qualification_certificate_opposite"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/d_Driver_safety_undertaking"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/d_Driver_safety_undertaking_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Driver_safety_undertaking"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/driver_Temp"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/driver_Temp_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Temp_residence_permit"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/d_driver_temp_hotel_F"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/d_driver_temp_hotel_F_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Temp_residence_permit_opposite"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/d_driver_c_Driver_license_F"
                        style="@style/Sketch_map_layout2">

                        <ImageView
                            android:id="@+id/d_driver_c_Driver_license_F_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/image"
                            android:scaleType="fitXY"
                            android:src="@drawable/add_default_photo" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/rounded_rectangle"
                            android:gravity="center"
                            android:text="@string/Copy_of_driver_license_opposite"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
